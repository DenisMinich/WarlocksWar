<Actor>:
    size: 10, 20
    pos: 300, 100
    canvas:
        Color:
            rgba: 0, .5, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Battlefield>:
    actor: my_actor

    canvas.before:
        Color:
            rgba: 0, 0, .1, 1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 0, 0, 1
        Ellipse:
            size: 10, 10
            pos: 200, 200
        Ellipse:
            size: 10, 10
            pos: 400, 300

    Actor:
        id: my_actor